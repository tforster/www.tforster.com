  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "program": "${workspaceFolder}/webproducer/index.js",
      "request": "launch",
      "runtimeVersion": "14",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--preserve-symlinks"
      ],
      "env": {
        "AWS_PROFILE": "tforster"
      },
      "envFile": "${workspaceFolder}/webproducer/.env",
      "type": "pwa-node"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "CLI",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/webproducer/node_modules/@tforster/webproducer/src/index.js",
      "runtimeVersion": "14",
      "runtimeArgs": [
        "--preserve-symlinks"
      ],
      "args": [
        "--src",
        "./src",
        "--dest",
        "./dist",
        "--data",
        "./src/data/data.json",
        "--transform",
        "function(){//some func}"
      ]
    }
  ]
}
